<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="16dp"
                android:right="16dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/pink_500"/>
            <corners
                android:radius="6dp"/>
            <solid
                android:color="@color/teal_700"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="16dp"
                android:right="16dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/pink_200"/>
            <corners
                android:radius="6dp"/>
            <solid
                android:color="@color/teal_200"/>
        </shape>
    </item>
</selector>